             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .debug-text-area {
            width: 800px;
            height: 800px;
            overflow: scroll;
        }
    </ui:style>
    <g:FlowPanel>
        <g:TextArea ui:field="textArea" styleName="{style.debug-text-area}">
        </g:TextArea>
    </g:FlowPanel>
</ui:UiBinder> 
